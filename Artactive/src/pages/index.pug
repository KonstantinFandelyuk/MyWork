	body#body
		style.
			.preloader{
				min-height: 100vh;
				height: 100%;
				width: 100%;
				background-color: rgb(255,255,255);
				color: rgb(36,111,176);
				font-size: 45px;
				font-family:  Arial, sans-serif;
				align-items: center;
				justify-content: center;
				flex-direction: column;
				position: fixed;
				top: 0;
				left: 0;
				transition-duration: 1s;
				display: none;
				z-index: 10000;
			}
			.preloader.noload{
				display: flex;
			}
		script.
			document.addEventListener("DOMContentLoaded", function(){
				document.querySelector('.preloader').classList.remove('noload');
			});

		.preloader
			img(src="img/preloader/preloader.gif" alt="preloader")
